<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <fylder.keyboard.lib.view.EmoticonsToolBarView
        android:id="@+id/emoticon_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />

    <fylder.keyboard.lib.view.EmoticonsIndicatorView
        android:id="@+id/item_emotion_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="8dp" />

    <fylder.keyboard.lib.view.EmoticonsPageView
        android:id="@+id/item_emotion_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/item_emotion_indicator" />


</RelativeLayout>